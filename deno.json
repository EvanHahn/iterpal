{
  "tasks": {
    "test": "deno task test:fmt && deno task test:lint && deno task test:docs && deno task test:types && deno test",
    "test:fmt": "deno fmt --check",
    "test:lint": "deno lint",
    "test:docs": "deno doc --lint mod.ts",
    "test:types": "deno check **/*.ts"
  },
  "compilerOptions": {
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noUncheckedIndexedAccess": true,
    "useUnknownInCatchVariables": true
  },
  "imports": {
    "assert": "https://deno.land/std@0.212.0/assert/mod.ts",
    "mock": "https://deno.land/std@0.212.0/testing/mock.ts"
  }
}
